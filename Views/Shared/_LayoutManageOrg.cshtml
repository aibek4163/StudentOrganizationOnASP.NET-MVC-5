            </div>
        </div>
    </nav>



    <div class="container mt-3">
        @{
            var org = ViewBag.Organization;
            var req_size = ViewBag.CountRequests;
            var requests = ViewBag.Requests;
            var students = ViewBag.Students;
        }
        <div class="row">
            <div class="col-3 pl-0">
                <div class="card" style="width:100%">
                    @foreach (var o in org)
                    {
                        <div class="card-header text-white" style="background-color: #343A40">@o.name</div>
                    }
                    <ul class="list-group list-group-flush mx-auto">
                        <li class="list-group-item"><a href="@Url.Action(User.Identity.GetUserId(),"Organization/UserOrganization")">All Members</a></li>
                        <li class="list-group-item"><a href="@Url.Action(User.Identity.GetUserId(),"Organization/Requests")">Requests (@req_size)</a></li>
                        <li class="list-group-item"><a href="@Url.Action(User.Identity.GetUserId(),"Organization/Requirments")">Requirments of Organization</a></li>
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>


    <div class="footer">
        <div class="footer_column">
            <div class="container">
                <nav class="footer_nav">
                    <div class="nav_content">
                        <ul>
                            <li><a class=" nav_link" href="#">About StudGOV</a></li>
